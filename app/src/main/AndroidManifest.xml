<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.groww">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:windowSoftInputMode="adjustResize"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:name=".growApp.GrowApp"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.Groww">
        <activity
            android:name="com.example.groww.ui.addMoney.AddMoney"
            android:exported="true" />
        <activity
            android:name="com.example.groww.ui.addMoney.Explore.HomeActivity"
            android:exported="true" />
        <activity
            android:name="com.example.groww.ui.mutualFunds.MutualFundBaseActivity"
            android:exported="true" />
        <activity
            android:name="com.example.groww.ui.loginSignup.LoginSplashScreenActivity"
            android:exported="true" />
        <activity
            android:name=".ui.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.groww.ui.addMoney.ProfileActivity"
            android:exported="true"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>