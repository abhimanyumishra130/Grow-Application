<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BothSideEqualMargin">
        <item name="android:layout_marginStart">@dimen/dp_20</item>
        <item name="android:layout_marginEnd">@dimen/dp_20</item>
    </style>

    <style name="GrowImageLogo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:contentDescription">GrowLogoName</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextViewSimple_SplashScreen">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_48</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textColor">@color/light_black</item>
    </style>

    <style name="TextViewBelow_GreenLine">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/sp_18</item>
    </style>

    <style name="ButtonContinueWithGoogle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="EditTextEmailAddress_Login">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto</item>
<!--        <item name="android:textColor">@color/dark_grey</item>-->
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:layout_marginTop">@dimen/dp_30</item>
    </style>

    <style name="TextViewEnterMobileNumber">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

</resources>