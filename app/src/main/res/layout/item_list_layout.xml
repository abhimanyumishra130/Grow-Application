<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="20dp"
    android:elevation="@dimen/dp_8"
    app:cardCornerRadius="@dimen/dp_20"
    android:layout_margin="@dimen/dp_5"
    android:layout_height="wrap_content">

    <LinearLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/logoLoser"
            android:src="@drawable/imagedummy"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"/>

        <TextView
            android:id="@+id/companySymbolLoser"
            android:text="ONGC"
            android:textSize="13sp"
            android:textColor="@color/primary_black_text"
            android:fontFamily="@font/roboto_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/currentPriceLoser"
            android:text="17,562.00"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/priceGainLoser"
            android:text="+165.10 (0.95%)"
            android:fontFamily="@font/roboto_bold"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



    </LinearLayout>


</androidx.cardview.widget.CardView>