<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/BothSideEqualMargin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.loginSignup.login.EnterPassword">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/epGrowLogoName"
            style="@style/GrowImageLogo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_102"
            android:src="@drawable/grow_logo_name"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/epEmailAddress"
            style="@style/EditTextEmailAddress_Login"
            android:layout_below="@+id/epGrowLogoName"
            android:text="@string/email_address" />

        <EditText
            android:id="@+id/etEPEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_below="@id/epEmailAddress"
            android:background="@android:color/transparent"
            android:hint="@string/eg_me_yahoo_com"
            android:textColor="@color/light_black"
            android:textSize="@dimen/sp_14"
            tools:ignore="TextFields" />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:layout_below="@+id/etEPEmailAddress"
            android:background="@color/green" />

        <TextView
            android:id="@+id/epEnterPassword"
            style="@style/EditTextEmailAddress_Login"
            android:layout_below="@id/view1"
            android:text="@string/enter_password" />

        <EditText
            android:id="@+id/epEtPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_below="@+id/epEnterPassword"
            android:layout_marginEnd="10dp"
            android:background="@android:color/transparent"
            android:drawableEnd="@drawable/ic_forgot_pass"
            android:hint="@string/_8_30_characters"
            android:inputType="textPassword"
            android:textColor="@color/light_black"
            android:textSize="@dimen/sp_14"
            tools:ignore="TextFields" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:layout_below="@+id/epEtPassword"
            android:background="@color/green" />

        <TextView
            android:id="@+id/btnEPForgotPassword"
            style="@style/TextViewBelow_GreenLine"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/green"
            android:layout_below="@+id/view2"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_37"
            android:text="@string/forgot_password"/>

        <TextView
            android:padding="15dp"
            android:gravity="center"
            android:id="@+id/btnEPEnter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@drawable/rectangle_next_enter"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/enter"
            android:textColor="@color/white" />

    </RelativeLayout>


</FrameLayout>