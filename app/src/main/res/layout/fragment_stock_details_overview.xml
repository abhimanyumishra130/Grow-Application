<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:background="@color/white"
        tools:context=".search.StockDetailsOverviewFragment">

        <TextView
            android:id="@+id/tvPerformance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Performance"
            android:textColor="@color/primary_black_text"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@drawable/performancei"
            app:layout_constraintStart_toEndOf="@+id/tvPerformance"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvTodayLow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Today's Low"
            android:textColor="@color/dark_gray"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPerformance" />

        <TextView
            android:id="@+id/tvTodayHigh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Today's High"
            android:textColor="@color/dark_gray"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPerformance" />

        <TextView
            android:id="@+id/tvTodayLowPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="84.30"
            android:textColor="@color/primary_black_text"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTodayLow" />

        <TextView
            android:id="@+id/tvTodayHighPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="86.55"
            android:textColor="@color/primary_black_text"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTodayLow" />

        <ImageView
            android:id="@+id/ivGreenIndicatorBar"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/greenindicatorbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTodayLowPrice" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:src="@drawable/indicatetriangle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivGreenIndicatorBar" />

        <TextView
            android:id="@+id/tv52WeekLow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="52 Week Low"
            android:textColor="@color/dark_gray"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivGreenIndicatorBar" />

        <TextView
            android:id="@+id/tv52WeekHigh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="52 Week High"
            android:textColor="@color/dark_gray"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivGreenIndicatorBar" />

        <TextView
            android:id="@+id/tv52WeekLowPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="19.85"
            android:textColor="@color/primary_black_text"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv52WeekLow" />

        <TextView
            android:id="@+id/tv52WeekhighPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="109.70"
            android:textColor="@color/primary_black_text"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv52WeekLow" />

        <ImageView
            android:id="@+id/ivGreenIndicatorBar2"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/greenindicatorbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv52WeekLowPrice" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="70dp"
            android:src="@drawable/indicatetriangle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivGreenIndicatorBar2" />

        <TextView
            android:id="@+id/tvOpen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Open"
            android:textColor="@color/dark_gray"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivGreenIndicatorBar2" />

        <TextView
            android:id="@+id/tvOpenPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="85.65"
            android:textColor="@color/primary_black_text"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvOpen" />

        <TextView
            android:id="@+id/tvVolume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Volume"
            android:textColor="@color/dark_gray"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@+id/tvVolumeQuantity"
            app:layout_constraintTop_toBottomOf="@+id/ivGreenIndicatorBar2" />

        <TextView
            android:id="@+id/tvVolumeQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="10,06,165"
            android:textColor="@color/primary_black_text"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvVolume" />

        <TextView
            android:id="@+id/tvPrevClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Prev Close"
            android:textColor="@color/dark_gray"
            android:textSize="15sp"
            app:layout_constraintEnd_toStartOf="@+id/tvVolume"
            app:layout_constraintStart_toEndOf="@+id/tvOpen"
            app:layout_constraintTop_toBottomOf="@+id/ivGreenIndicatorBar2" />

        <TextView
            android:id="@+id/tvPrevCloseAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="84.75"
            android:textColor="@color/primary_black_text"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/tvPrevClose"
            app:layout_constraintTop_toBottomOf="@+id/tvPrevClose" />

        <View
            android:id="@+id/viewBelowPerformance"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/light_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPrevCloseAmount"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/tvMarketDepth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Market Depth"
            android:textColor="@color/primary_black_text"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewBelowPerformance"
            android:layout_marginTop="20dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/hidemore"
            app:layout_constraintTop_toBottomOf="@+id/viewBelowPerformance"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="25dp"/>

        <TextView
            android:id="@+id/tvBuyOrders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buy Orders"
            android:textColor="@color/dark_gray"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@+id/tvMarketDepth"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvBuyOrdersPercentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="69.31%"
            android:textColor="@color/primary_black_text"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/tvBuyOrders"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvSellOrders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sell Orders"
            android:textColor="@color/dark_gray"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@+id/tvMarketDepth"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvSellOrdersPercentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30.69%"
            android:textColor="@color/primary_black_text"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/tvBuyOrders"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/ivGreenRedIndicatorBar"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:src="@drawable/greenredindicatorbar"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tvSellOrdersPercentage"/>

        <ImageView
            android:id="@+id/ivMarketDepthDetails"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/marketdepthdetails"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivGreenRedIndicatorBar"
            android:layout_marginTop="20dp"/>

        <View
            android:id="@+id/viewBelowMarketDepth"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/light_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivMarketDepthDetails"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/tvFinancials"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Financials"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/primary_black_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewBelowMarketDepth"/>

        <TextView
            android:id="@+id/tvRevenue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Revenue"
            android:textColor="@color/primary_green"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvProfit"
            app:layout_constraintTop_toBottomOf="@+id/tvFinancials"/>

        <TextView
            android:id="@+id/tvNetWorth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Net Worth"
            android:textStyle="bold"
            android:textColor="@color/primary_black_text"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/tvProfit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvFinancials"/>

        <TextView
            android:id="@+id/tvProfit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Profit"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/primary_black_text"
            app:layout_constraintTop_toBottomOf="@+id/tvFinancials"
            app:layout_constraintStart_toEndOf="@+id/tvRevenue"
            app:layout_constraintEnd_toStartOf="@+id/tvNetWorth"/>

        <View
            android:id="@+id/viewRevenueBar"
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:background="@color/primary_green"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tvRevenue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvProfit"/>

        <View
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:background="@color/light_gray"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/viewRevenueBar"
            app:layout_constraintTop_toBottomOf="@+id/tvNetWorth"/>

        <ImageView
            android:id="@+id/financialRevenueBarGraph"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:src="@drawable/financialsrevenuebargraph"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewRevenueBar"/>

        <TextView
            android:id="@+id/firstSimilarStocks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Similar Stocks"
            android:textSize="20sp"
            android:textColor="@color/primary_black_text"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/financialRevenueBarGraph"
            android:layout_marginTop="20dp"/>

        <ImageView
            android:id="@+id/marketPriceUpDownIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/marketpriceupdownicon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/financialRevenueBarGraph"
            android:layout_marginTop="22dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Market Price"
            android:textColor="@color/primary_green"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@+id/financialRevenueBarGraph"
            app:layout_constraintEnd_toStartOf="@+id/marketPriceUpDownIcon"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/firstSimilarStocksRecyclerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/firstSimilarStocks"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/secondSimilarStocks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Similar Stocks"
            android:textSize="20sp"
            android:textColor="@color/primary_black_text"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/firstSimilarStocksRecyclerView"
            android:layout_marginTop="20dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/secondSimilarStocksRecyclerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/secondSimilarStocks"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>