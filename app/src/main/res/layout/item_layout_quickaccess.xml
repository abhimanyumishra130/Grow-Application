<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/dp_10"
    app:cardCornerRadius="@dimen/dp_10"
    android:layout_margin="@dimen/dp_20"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="match_parent">

        <ImageView
            android:layout_marginTop="@dimen/sp_16"
            android:layout_marginStart="@dimen/sp_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/speaker"
            android:src="@drawable/ic_speaker"/>

        <TextView
            android:id="@+id/item_Pf_tv_StockLive"
            style="@style/TextViewEnterMobileNumber"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_marginEnd="46dp"
            android:layout_toEndOf="@+id/speaker"
            android:text="@string/nfo_live"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/item_Pf_tv_StockLiveDesc"
            style="@style/TextViewEnterMobileNumber"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/roboto"
            android:text="@string/invest_in_new_fund_offering"
            android:layout_below="@+id/speaker"
            android:layout_marginBottom="@dimen/dp_33"
            android:textSize="@dimen/sp_12" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>