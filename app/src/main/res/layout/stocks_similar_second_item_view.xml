<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="20dp"
    android:elevation="@dimen/dp_8"
    android:layout_margin="@dimen/dp_5"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/dp_10">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/SimilarStockSecondImage"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/randomstockpic"/>

        <TextView
            android:id="@+id/SimilarStockSecondName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JSW Steel"
            android:textSize="12sp"
            android:textColor="@color/primary_black_text"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/SimilarStockSecondPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚¹668.95"
            android:textSize="15sp"
            android:textColor="@color/primary_black_text"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/SimilarStockSecondPercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+35.75 (5.65%)"
            android:textSize="15sp"
            android:textColor="@color/primary_green"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"/>


    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>